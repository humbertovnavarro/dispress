{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "../out",
    "rootDir": "src",
    "typeRoots": ["./src/types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
